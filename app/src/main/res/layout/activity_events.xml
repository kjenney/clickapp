<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EventsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saved Events"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Event Groups Section -->
            <LinearLayout
                android:id="@+id/groupsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Event Groups"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btnCreateGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ New Group"
                        android:textSize="12sp"
                        android:minHeight="36dp"/>

                </LinearLayout>

                <ListView
                    android:id="@+id/groupsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="1dp"
                    android:divider="@android:color/darker_gray"
                    android:nestedScrollingEnabled="true"/>

            </LinearLayout>

            <!-- Divider between groups and events -->
            <View
                android:id="@+id/sectionDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <!-- Standalone Events Section -->
            <LinearLayout
                android:id="@+id/eventsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Standalone Events"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <ListView
                    android:id="@+id/shortcutsList"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:dividerHeight="1dp"
                    android:divider="@android:color/darker_gray"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"/>

            </LinearLayout>

            <!-- Empty State -->
            <TextView
                android:id="@+id/emptyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No events saved yet.\n\nGo back to the main screen and configure a click action, then tap 'Save as Event' to create one."
                android:textSize="14sp"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

    <!-- Version Footer -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:textSize="10sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>
